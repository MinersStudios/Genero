<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BottomNavBar -->

    <style name="Widget.Genero.BottomNavBar" parent="Base.Widget.Genero.BottomNavBar">
        <item name="barColor">?attr/colorSurfaceContainerHighest</item>
        <item name="indicatorColor">?attr/colorOnSurface</item>
    </style>

    <!-- ActionButton -->

    <style name="Widget.Genero.ActionButton" parent="Base.Widget.Genero.ActionButton">
        <item name="color">?attr/colorSurfaceContainerHighest</item>
        <item name="rippleColor">@color/action_button_ripple</item>
        <item name="icon">@drawable/ic_plus</item>
        <item name="iconTint">?attr/colorOnSurface</item>
    </style>

    <!-- CollapsingToolbarLayout -->

    <style name="Widget.Genero.CollapsingToolbarLayout" parent="Widget.Material3.CollapsingToolbar.Large">
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleCollapseMode">fade</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed|snap</item>
        <item name="expandedTitleMarginStart">@dimen/ctl_title_margin_horizontal</item>
        <item name="expandedTitleMarginEnd">@dimen/ctl_title_margin_horizontal</item>
        <item name="expandedTitleMarginBottom">@dimen/ctl_title_margin_vertical</item>
        <item name="expandedTitleMarginTop">@dimen/ctl_title_margin_vertical</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <!-- Preferences -->

    <style name="Preference.Theme.Genero" parent="PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/Preference.Genero</item>
        <item name="dialogPreferenceStyle">@style/Preference.Dialog.Genero</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBox.Genero</item>
        <item name="editTextPreferenceStyle">@style/Preference.Dialog.EditText.Genero</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category.Genero</item>
        <item name="switchPreferenceStyle">@style/Preference.Switch.Genero</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.Switch.Genero</item>
    </style>

    <style name="Preference.Category.Genero" parent="Preference.Category.Material">
        <item name="android:layout">@layout/widget_preference_category</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
        <item name="iconSpaceReserved">@bool/preference_icon_space_reserved</item>
    </style>

    <style name="Preference.Genero" parent="Preference.Material">
        <item name="android:layout">@layout/widget_preference</item>
        <item name="iconSpaceReserved">@bool/preference_icon_space_reserved</item>
    </style>

    <style name="Preference.Dialog.Genero" parent="Preference.DialogPreference.Material">
        <item name="android:layout">@layout/widget_preference</item>
        <item name="iconSpaceReserved">@bool/preference_icon_space_reserved</item>
    </style>

    <style name="Preference.CheckBox.Genero" parent="Preference.CheckBoxPreference.Material">
        <item name="android:layout">@layout/widget_preference</item>
        <item name="iconSpaceReserved">@bool/preference_icon_space_reserved</item>
    </style>

    <style name="Preference.Dialog.EditText.Genero" parent="Preference.DialogPreference.EditTextPreference.Material">
        <item name="android:layout">@layout/widget_preference</item>
        <item name="iconSpaceReserved">@bool/preference_icon_space_reserved</item>
    </style>

    <style name="Preference.Switch.Genero" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="android:layout">@layout/widget_preference</item>
        <item name="android:widgetLayout">@layout/widget_switch</item>
        <item name="iconSpaceReserved">@bool/preference_icon_space_reserved</item>
    </style>

</resources>
