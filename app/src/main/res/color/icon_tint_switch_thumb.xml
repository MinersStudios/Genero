<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State : Checked -->

    <item
        android:color="@macro/switch_selected_handle_color"
        android:state_checked="true" />

    <!-- State : Unchecked -->

    <item
        android:color="@macro/switch_unselected_handle_color"
        android:state_checked="false" />

    <!-- State : Disabled, Checked -->

    <item
        android:alpha="@dimen/switch_disabled_selected_handle_opacity"
        android:color="@macro/switch_disabled_selected_handle_color"
        android:state_checked="true"
        android:state_enabled="false" />

    <!-- State : Disabled, Unchecked -->

    <item
        android:alpha="@dimen/switch_disabled_unselected_handle_opacity"
        android:color="@macro/switch_disabled_unselected_handle_color"
        android:state_checked="false"
        android:state_enabled="false" />

</selector>
