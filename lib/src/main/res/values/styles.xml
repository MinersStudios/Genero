<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.Genero.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>

    <style name="Base.Widget.Genero.BottomNavBar" parent="">
        <item name="barColor">@color/bnb_bar</item>
        <item name="barRadius">@dimen/bnb_bar_radius</item>
        <item name="barPadding">@dimen/bnb_bar_padding</item>
        <item name="indicatorColor">@color/bnb_indicator</item>
        <item name="indicatorRadius">@dimen/bnb_indicator_radius</item>
        <item name="iconSize">@dimen/bnb_icon_size</item>
        <item name="animDuration">@integer/bnb_animation_duration</item>
        <item name="corners">all</item>
        <item name="interpolator">@android:anim/accelerate_decelerate_interpolator</item>
    </style>

    <style name="Base.Widget.Genero.ActionButton" parent="">
        <item name="size">@dimen/action_button_size</item>
        <item name="color">@color/action_button_background</item>
        <item name="rippleColor">@color/action_button_ripple</item>
        <item name="borderWidth">@dimen/action_button_border_width</item>
        <item name="borderColor">@color/action_button_border</item>
        <item name="iconSize">@dimen/action_button_icon_size</item>
        <item name="iconTint">@color/action_button_icon</item>
        <item name="animDuration">@integer/action_button_animation_duration</item>
        <item name="interpolator">@android:anim/accelerate_decelerate_interpolator</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Genero.Circular</item>
    </style>

    <style name="Base.Widget.Genero.ModalBottomSheet" parent="">
        <item name="android:orientation">vertical</item>
        <item name="widthMax">@dimen/modal_bottom_sheet_max_width</item>
        <item name="expandedOffset">@dimen/modal_bottom_sheet_expanded_offset</item>
        <item name="significantVelocityThreshold">@integer/modal_bottom_sheet_significant_velocity_threshold</item>
        <item name="halfExpandedRatio">@dimen/modal_bottom_sheet_half_expanded_ratio</item>
        <item name="hideFriction">@dimen/modal_bottom_sheet_hide_friction</item>
        <item name="dismissOffset">@dimen/modal_bottom_sheet_dismiss_offset</item>
        <item name="hideable">@bool/modal_bottom_sheet_hideable</item>
        <item name="draggable">@bool/modal_bottom_sheet_draggable</item>
        <item name="enableEdgeToEdge">@bool/modal_bottom_sheet_enable_edge_to_edge</item>
        <item name="fitToContents">@bool/modal_bottom_sheet_fit_to_contents</item>
        <item name="skipCollapsed">@bool/modal_bottom_sheet_skip_collapsed</item>
        <item name="gestureInsetBottomIgnored">@bool/modal_bottom_sheet_gesture_inset_bottom_ignored</item>
        <item name="shouldRemoveExpandedCorners">@bool/modal_bottom_sheet_should_remove_expanded_corners</item>
        <item name="updateImportantForAccessibilityOnSiblings">@bool/modal_bottom_sheet_update_important_for_accessibility_on_siblings</item>
        <item name="cancelOnTouchOutside">@bool/modal_bottom_sheet_cancel_on_touch_outside</item>
    </style>

</resources>
