<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="shapeAppearance"        format="reference" />
    <attr name="shapeAppearanceOverlay" format="reference" />
    <attr name="iconSize"               format="dimension" />
    <attr name="iconTint"               format="color" />
    <attr name="animDuration"           format="integer" />
    <attr name="interpolator"           format="reference" />

    <declare-styleable name="BottomNavBar">
        <attr name="menu"            format="reference" />
        <attr name="itemSize"        format="dimension" />
        <attr name="barColor"        format="color" />
        <attr name="barRadius"       format="dimension" />
        <attr name="barPadding"      format="dimension" />
        <attr name="indicatorColor"  format="color" />
        <attr name="indicatorRadius" format="dimension" />
        <attr name="iconSize" />
        <attr name="iconTint" />
        <attr name="iconTintActive" format="color" />
        <attr name="animDuration" />
        <attr name="interpolator" />
        <attr name="corners" format="integer">
            <flag name="none"         value="0" />
            <flag name="top_left"     value="1" />
            <flag name="top_right"    value="2" />
            <flag name="bottom_left"  value="4" />
            <flag name="bottom_right" value="8" />
            <flag name="all"          value="15" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ActionButton">
        <attr name="handler"         format="string" />
        <attr name="size"            format="dimension" />
        <attr name="color"           format="color" />
        <attr name="rippleColor"     format="color" />
        <attr name="borderWidth"     format="dimension" />
        <attr name="borderColor"     format="color" />
        <attr name="icon"            format="reference" />
        <attr name="iconSize" />
        <attr name="iconTint" />
        <attr name="animDuration" />
        <attr name="interpolator" />
        <attr name="shapeAppearance" />
        <attr name="shapeAppearanceOverlay" />
    </declare-styleable>

    <declare-styleable name="BnbMenuItem">
        <attr name="buttonIcon"     format="reference" />
        <attr name="buttonIconSize" format="dimension" />
        <attr name="buttonIconTint" format="color" />
        <attr name="buttonHandler"  format="string" />
    </declare-styleable>

    <declare-styleable name="ModalBottomSheetLayout">
        <attr name="state" format="integer">
            <enum name="expanded"      value="3" />
            <enum name="half_expanded" value="6" />
            <enum name="collapsed"     value="4" />
        </attr>
        <attr name="saveFlags" format="integer">
            <flag name="all"             value="-1" />
            <flag name="none"            value="0" />
            <flag name="peek_height"     value="1" />
            <flag name="fit_to_contents" value="2" />
            <flag name="hideable"        value="4" />
            <flag name="skip_collapsed"  value="8" />
        </attr>
        <attr name="peekHeight" format="dimension">
            <enum name="auto" value="-1" />
        </attr>
        <attr name="expandedOffset"                            format="dimension" />
        <attr name="significantVelocityThreshold"              format="integer" />
        <attr name="halfExpandedRatio"                         format="float" />
        <attr name="hideFriction"                              format="float" />
        <attr name="hideable"                                  format="boolean" />
        <attr name="draggable"                                 format="boolean" />
        <attr name="enableEdgeToEdge"                          format="boolean" />
        <attr name="fitToContents"                             format="boolean" />
        <attr name="skipCollapsed"                             format="boolean" />
        <attr name="gestureInsetBottomIgnored"                 format="boolean" />
        <attr name="shouldRemoveExpandedCorners"               format="boolean" />
        <attr name="updateImportantForAccessibilityOnSiblings" format="boolean" />
    </declare-styleable>

</resources>
