<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="shapeAppearance"        format="reference" />
    <attr name="shapeAppearanceOverlay" format="reference" />
    <attr name="iconSize"               format="dimension" />
    <attr name="iconTint"               format="color" />
    <attr name="animDuration"           format="integer" />
    <attr name="interpolator"           format="reference" />

    <declare-styleable name="BottomNavBar">
        <attr name="menu"            format="reference" />
        <attr name="itemSize"        format="dimension" />
        <attr name="barColor"        format="color" />
        <attr name="barRadius"       format="dimension" />
        <attr name="barPadding"      format="dimension" />
        <attr name="indicatorColor"  format="color" />
        <attr name="indicatorRadius" format="dimension" />
        <attr name="iconSize" />
        <attr name="iconTint" />
        <attr name="iconTintActive" format="color" />
        <attr name="animDuration" />
        <attr name="interpolator" />
        <attr name="corners" format="integer">
            <flag name="none"         value="0" />
            <flag name="top_left"     value="1" />
            <flag name="top_right"    value="2" />
            <flag name="bottom_left"  value="4" />
            <flag name="bottom_right" value="8" />
            <flag name="all"          value="15" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ActionButton">
        <attr name="handler"         format="string" />
        <attr name="size"            format="dimension" />
        <attr name="color"           format="color" />
        <attr name="rippleColor"     format="color" />
        <attr name="borderWidth"     format="dimension" />
        <attr name="borderColor"     format="color" />
        <attr name="icon"            format="reference" />
        <attr name="iconSize" />
        <attr name="iconTint" />
        <attr name="animDuration" />
        <attr name="interpolator" />
        <attr name="shapeAppearance" />
        <attr name="shapeAppearanceOverlay" />
    </declare-styleable>

    <declare-styleable name="BnbMenuItem">
        <attr name="buttonIcon"     format="reference" />
        <attr name="buttonIconSize" format="dimension" />
        <attr name="buttonIconTint" format="color" />
        <attr name="buttonHandler"  format="string" />
    </declare-styleable>

</resources>
